<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/edittext_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:text="账号 :"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_middle_size" />

    <ImageView
        android:id="@+id/iv_psw_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:padding="10dp"
        android:src="@drawable/psw_hideorshow_selector" />

    <com.yuemai.game34999.presentaion.widget.DeletableEditText
        android:id="@+id/det"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_psw_icon"
        android:layout_toRightOf="@id/tv_label"
        android:background="@null"
        android:inputType="textPassword"
        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:padding="3dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="@dimen/text_middle_size" />
</RelativeLayout>