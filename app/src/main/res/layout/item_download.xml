<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:orientation="vertical"
    android:padding="10dp">


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:src="@drawable/default_game_icon" />

    <TextView
        android:id="@+id/tv_gameName"
        style="@style/ItemTitleTextStyle"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_marginTop="10dp"
        android:text="王者荣耀" />

    <TextView
        android:id="@+id/tv_gameInfo"
        style="@style/ItemTitleTextStyle"
        android:layout_below="@+id/tv_gameName"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_marginTop="3dp"
        android:text="" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_gameInfo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="@string/delete"
        android:textColor="@color/themeBluePre"
        android:textSize="12sp"
        android:visibility="gone"/>

    <com.yuemai.game34999.presentaion.widget.DownloadProgressButton
        android:id="@+id/btn_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="@string/download"
        android:textColor="@color/white"
        android:textSize="@dimen/text_middle_size"
        android:visibility="visible"
        app:background_color="@color/themeBlue"
        app:background_second_color="#fff"
        app:background_strokeWidth="1dp"
        app:radius="15dp"
        app:text_color="@color/themeBlue"
        app:text_cover_color="#fff"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>