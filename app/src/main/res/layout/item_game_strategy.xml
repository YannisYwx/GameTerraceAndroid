<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_gameImg"
        android:layout_width="120dp"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_margin="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/default_gamezone"
        />

    <TextView
        android:id="@+id/tv_gameTitle"
        style="@style/ItemTitleTextStyle"
        android:layout_marginRight="12dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@id/iv_gameImg"
        android:lines="1"
        android:text="《捕鱼达人3》常见水晶获取方式有金币购买、任务获取、抽奖活动......"/>

    <TextView
        android:id="@+id/tv_gameInfo"
        style="@style/ItemInfoTextStyle"
        android:layout_marginRight="12dp"
        android:lines="2"
        android:text="水晶在捕鱼达人3中有很重要的用途，比如购买道具，兑换金币，抽大奖"
        android:layout_alignBottom="@+id/iv_gameImg"
        android:layout_toEndOf="@+id/iv_gameImg"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerHeight"
        android:layout_alignParentBottom="true"
        android:background="@drawable/list_divider"
        />
</RelativeLayout>