<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_game_big"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@drawable/default_adv" />

    <include layout="@layout/view_divider_thick" />

    <com.yuemai.game34999.presentaion.widget.ClassifyView
        android:id="@+id/cv_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cv_leftText="@string/home_hotGame"
        app:cv_rightText="@string/more"
        app:cv_rightTextDrawable="@mipmap/icon_more" />
</LinearLayout>