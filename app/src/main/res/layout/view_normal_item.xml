<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:id="@+id/view_item_rl"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <!--设置左侧text-->
    <TextView
        android:textSize="@dimen/text_middle_size"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/icon_recharge"
        android:id="@+id/view_item_text_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="我要充值"
        android:textColor="#666666"/>

    <!--设置右侧的箭头是否显示-->
    <ImageView
        android:id="@+id/view_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/list_setting_return"/>
    <!--设置右侧text-->
    <TextView
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/view_item_arrow"
        android:id="@+id/view_item_text_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <!--设置是否有分割线-->
    <View
        android:id="@+id/view_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/silver"/>
</RelativeLayout>