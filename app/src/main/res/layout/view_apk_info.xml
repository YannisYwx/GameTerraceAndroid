<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/home_recommend_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_apkIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/default_game_icon"/>

        <TextView
            android:id="@+id/tv_apkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="龙之谷手游"
            android:textColor="@color/black"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_apkCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="600.5M"
            android:textColor="@color/textGray"
            android:textSize="@dimen/top_mini_size"/>

        <com.yuemai.game34999.presentaion.widget.DownloadProgressButton
            android:id="@+id/btn_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:text="@string/download"
            android:textColor="@color/white"
            android:textSize="@dimen/text_middle_size"
            app:background_color="@color/themeBlue"
            app:background_second_color="#fff"
            app:background_strokeWidth="1dp"
            app:radius="15dp"
            app:text_color="@color/themeBlue"
            app:text_cover_color="#fff"
            />
    </LinearLayout>
</FrameLayout>