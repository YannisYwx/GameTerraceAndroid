<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checkable="false" android:state_checked="false">
        <shape>
            <corners android:radius="20dp"/>
            <stroke android:width="1dp" android:color="@color/btn_orange"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item android:state_checkable="true" android:state_checked="true" android:state_enabled="true">
        <shape>
            <corners android:radius="20dp"/>
            <solid android:color="@color/btn_orange"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="20dp"/>
            <solid android:color="@color/btn_gray"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="20dp"/>
            <solid android:color="@color/btn_orange"/>
        </shape>
    </item>
</selector>