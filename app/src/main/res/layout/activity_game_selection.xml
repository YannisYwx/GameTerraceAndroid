<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_gameSelectionM"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:src="@drawable/default_adv" />

    <include layout="@layout/view_divider_thick" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.yuemai.game34999.presentaion.widget.ClassifyView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cv_leftText="@string/hot" />

            <com.yannis.common.widget.NestedGridView
                android:id="@+id/gv_hot_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:horizontalSpacing="12dp"
                android:numColumns="2"
                android:verticalSpacing="12dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>