<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/ranking_header_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_ranking_top2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_ranking2"
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:layout_marginTop="49dp"
                    android:src="@drawable/default_game_icon"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="倩女幽魂"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_middle_size"/>

                <com.yuemai.game34999.presentaion.widget.DownloadProgressButton
                    android:id="@+id/btn_downloadTop2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="3dp"
                    android:text="@string/download"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_middle_size"
                    app:background_color="@color/themeBlue"
                    app:background_second_color="#fff"
                    app:background_strokeWidth="1dp"
                    app:radius="15dp"
                    app:text_color="@color/themeBlue"
                    app:text_cover_color="#fff"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ranking_top1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_ranking1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="37dp"
                    android:src="@drawable/default_game_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="王者荣耀"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_middle_size"/>

                <com.yuemai.game34999.presentaion.widget.DownloadProgressButton
                    android:id="@+id/btn_downloadTop1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="3dp"
                    android:text="@string/download"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_middle_size"
                    app:background_color="@color/themeBlue"
                    app:background_second_color="#fff"
                    app:background_strokeWidth="1dp"
                    app:radius="15dp"
                    app:text_color="@color/themeBlue"
                    app:text_cover_color="#fff"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ranking_top3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_ranking3"
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:layout_marginTop="49dp"
                    android:src="@drawable/default_game_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="梦幻西游"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_middle_size"/>

                <com.yuemai.game34999.presentaion.widget.DownloadProgressButton
                    android:id="@+id/btn_download3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="3dp"
                    android:text="@string/download"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_middle_size"
                    app:background_color="@color/themeBlue"
                    app:background_second_color="#fff"
                    app:background_strokeWidth="1dp"
                    app:radius="15dp"
                    app:text_color="@color/themeBlue"
                    app:text_cover_color="#fff"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>