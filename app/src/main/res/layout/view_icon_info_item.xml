<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/comm_list_selector"
                android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_task_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/makemoney_icon_check"/>

    <TextView
        android:id="@+id/tv_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_task_icon"
        android:layout_marginTop="12dp"
        android:text="每日签到"
        android:textColor="@color/text_black"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_task_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连续签到，每天积分都不同"
        android:textSize="14sp"
        android:layout_below="@+id/tv_task_title"
        android:layout_marginBottom="11dp"
        android:layout_toRightOf="@+id/iv_task_icon"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerHeight"
        android:layout_alignParentBottom="true"
        android:background="@drawable/list_divider"/>
</RelativeLayout>