<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <!--控制标题栏颜色-->
        <item name="colorPrimary">@color/themeBlue</item>
        <!--控制状态栏颜色-->
        <item name="colorPrimaryDark">@color/white</item>
        <!--控制activity 内容部分的大部分颜色-->
        <item name="colorAccent">@color/themeBlue</item>

        <item name="android:windowContentOverlay">@null</item>

        <item name="colorControlHighlight">#1000</item><!--波纹颜色-->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:dividerHeight">0.68dp</item>
        <item name="android:listDivider">@drawable/list_divider</item><!--统一list item 间隔线-->
        <item name="android:listSelector">@drawable/comm_list_selector</item><!--统一list item点击效果-->
        <!--<item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>--><!--editText输入框游标颜色-->
        <item name="android:windowBackground">@color/white</item><!--统一窗体背景颜色-->
        <item name="actionBarSize">48dp</item>
        <item name="android:actionBarSize">48dp</item>
    </style>

    <style name="AppBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Customize your theme here. -->
        <!--控制标题栏颜色-->
        <item name="colorPrimary">@color/themeBlue</item>
        <!--控制状态栏颜色-->
        <item name="colorPrimaryDark">@color/themeBlue</item>
        <!--控制activity 内容部分的大部分颜色-->
        <item name="colorAccent">@color/themeBlue</item>
    </style>

    <!--加载中对话框样式-->
    <style name="WeixinLoadingDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--底部tab的样式-->
    <style name="TabStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@null</item>
    </style>


    <!--登录注册 编辑框的样式-->
    <style name="NormalEditText">
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <!--通用按钮的样式-->
    <style name="NormalButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/normal_button_selector</item>
        <item name="android:layout_marginLeft">45dp</item>
        <item name="android:layout_marginRight">45dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!---->
    <style name="SmallButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/normal_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--游戏名字字体样式-->
    <style name="ItemTitleTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--游戏详情字体样式-->
    <style name="ItemInfoTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textGray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    <!-- 用户评价字体样式-->
    <style name="CommentTestStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="CommBigButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">42dp</item>
    </style>

    <style name="TextAppearance.Row" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextAppearance.ExpandedTitle"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
    </style>
</resources>
